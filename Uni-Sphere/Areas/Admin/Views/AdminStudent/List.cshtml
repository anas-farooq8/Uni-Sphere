@model List<Uni_Sphere.Models.DTO.StudentDTO>
@{
    ViewData["Title"] = "Students";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center">Students</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table id="tblDataStudent" class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Roll No</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>PhoneNo.</th>
                    <th>Section</th>
                    <th>Degree</th>
                    <th>Degree Program</th>
                    <th>Batch</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    }
    else
    {
        <p>No Students found.</p>
    }
</div>


@section Scripts {
    <script src="~/js/student.js">
    </script>
}