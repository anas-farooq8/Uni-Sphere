@model List<Uni_Sphere.Models.DTO.TeacherDTO>
@{
    ViewData["Title"] = "Teachers";
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center">Teachers</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table id="tblDataTeacher" class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>PhoneNo.</th>
                    <th>Dob</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    }
    else
    {
        <p>No Teachers found.</p>
    }
</div>

@section Scripts {
    <script src="~/js/teacher.js">
    </script>
}